<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_65sdp"
    android:background="@color/backgroundColor"
    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/alignLeftLay"
        android:layout_width="@dimen/_45sdp"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginStart="@dimen/_4sdp"
        android:layout_marginEnd="@dimen/_4sdp"
        android:background="#F0F0F0"
        android:gravity="center">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_22sdp"
            android:adjustViewBounds="true"
            android:src="@drawable/icon_font_align_left" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/alignCenterLay"
        android:layout_width="@dimen/_45sdp"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginStart="@dimen/_4sdp"
        android:layout_marginEnd="@dimen/_4sdp"
        android:background="#F0F0F0"
        android:gravity="center">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_22sdp"
            android:adjustViewBounds="true"
            android:src="@drawable/icon_font_align_center" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/alignRightLay"
        android:layout_width="@dimen/_45sdp"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginStart="@dimen/_4sdp"
        android:layout_marginEnd="@dimen/_4sdp"
        android:background="#F0F0F0"
        android:gravity="center">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_22sdp"
            android:adjustViewBounds="true"
            android:src="@drawable/icon_font_align_right" />

    </LinearLayout>

</LinearLayout>
